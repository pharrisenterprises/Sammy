{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "./tsconfig.json",
  "compilerOptions": {
    // ========================================================================
    // RELAXED CHECKS FOR TESTS
    // ========================================================================
    "noUnusedLocals": false,
    "noUnusedParameters": false,

    // ========================================================================
    // TYPE ACQUISITION
    // ========================================================================
    "types": ["vitest/globals", "chrome", "node", "@testing-library/jest-dom"]
  },

  "include": [
    "src/**/*.test.ts",
    "src/**/*.test.tsx",
    "src/**/*.spec.ts",
    "src/**/*.spec.tsx",
    "src/test/**/*.ts",
    "src/test/**/*.tsx",
    "tests/**/*.ts",
    "tests/**/*.tsx",
    "vitest.setup.ts",
    "vitest.config.ts"
  ],

  "exclude": [
    "node_modules",
    "dist"
  ]
}
