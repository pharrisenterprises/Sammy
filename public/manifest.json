{
  "manifest_version": 3,
  "name": "Sammy Test Automation",
  "description": "Record, replay, and automate browser tests with CSV-driven data entry",
  "version": "1.0.0",
  
  "icons": {
    "16": "icon/icon16.png",
    "48": "icon/icon48.png",
    "128": "icon/icon128.png"
  },
  
  "action": {
    "default_popup": "index.html",
    "default_icon": {
      "16": "icon/icon16.png",
      "48": "icon/icon48.png",
      "128": "icon/icon128.png"
    },
    "default_title": "Sammy Test Automation"
  },
  
  "background": {
    "service_worker": "background/background.js",
    "type": "module"
  },
  
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["js/main.js"],
      "css": [],
      "run_at": "document_idle",
      "all_frames": true
    }
  ],
  
  "web_accessible_resources": [
    {
      "resources": [
        "js/interceptor.js",
        "js/replay.js",
        "fonts/*",
        "icon/*"
      ],
      "matches": ["<all_urls>"]
    }
  ],
  
  "permissions": [
    "storage",
    "activeTab",
    "tabs",
    "scripting",
    "webNavigation"
  ],
  
  "host_permissions": [
    "<all_urls>"
  ],
  
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  },
  
  "minimum_chrome_version": "100"
}