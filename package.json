{
  "name": "sammy-test-automation",
  "version": "1.0.0",
  "description": "Chrome extension for browser test automation with recording, replay, and CSV-driven data entry",
  "type": "module",
  "private": true,
  "author": "Pharris Enterprises",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/pharrisenterprises/Sammy.git"
  },
  "keywords": [
    "chrome-extension",
    "test-automation",
    "browser-automation",
    "recording",
    "replay",
    "csv",
    "manifest-v3"
  ],
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "scripts": {
    "dev": "vite",
    "build": "npm run type-check && npm run build:ui && npm run build:bg && npm run build:page && npm run postbuild",
    "build:ui": "vite build",
    "build:bg": "vite build --config vite.config.bg.ts",
    "build:page": "vite build --config vite.config.page.ts",
    "build:fast": "npm run build:ui && npm run build:bg && npm run build:page && npm run postbuild",
    "postbuild": "node scripts/postbuild.js",
    "preview": "vite preview",
    "watch": "npm-run-all --parallel watch:*",
    "watch:ui": "vite build --watch",
    "watch:bg": "vite build --config vite.config.bg.ts --watch",
    "type-check": "tsc --noEmit",
    "type-check:watch": "tsc --noEmit --watch",
    "type-check:app": "tsc --noEmit -p tsconfig.app.json",
    "type-check:test": "tsc --noEmit -p tsconfig.test.json",
    "lint": "eslint src/ --cache",
    "lint:fix": "eslint src/ --fix --cache",
    "lint:report": "eslint src/ --format html --output-file lint-report.html",
    "lint:ci": "eslint src/ --max-warnings 0",
    "format": "prettier --write \"src/**/*.{ts,tsx,css,json}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx,css,json}\"",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "test:ci": "vitest run --coverage --reporter=junit --outputFile=test-results.xml",
    "check-deps": "madge --circular --extensions ts,tsx src/",
    "check-all": "npm run lint && npm run type-check && npm run test && npm run check-deps",
    "clean": "rimraf dist coverage .eslintcache node_modules/.tmp",
    "clean:all": "rimraf dist coverage .eslintcache node_modules package-lock.json",
    "prepare": "husky install || true",
    "precommit": "lint-staged"
  },
  "dependencies": {
    "@emotion/cache": "^11.11.0",
    "@emotion/react": "^11.13.0",
    "@emotion/styled": "^11.13.0",
    "@floating-ui/react": "^0.26.22",
    "@fortawesome/free-solid-svg-icons": "^6.7.2",
    "@fortawesome/react-fontawesome": "^0.2.2",
    "@hello-pangea/dnd": "^18.0.1",
    "@heroicons/react": "^2.1.3",
    "@material-tailwind/react": "^2.1.9",
    "@mui/material": "^5.16.4",
    "@radix-ui/react-accordion": "^1.2.11",
    "@radix-ui/react-avatar": "^1.1.10",
    "@radix-ui/react-dialog": "^1.1.14",
    "@radix-ui/react-dropdown-menu": "^2.1.15",
    "@radix-ui/react-label": "^2.1.7",
    "@radix-ui/react-popover": "^1.1.14",
    "@radix-ui/react-progress": "^1.1.7",
    "@radix-ui/react-radio-group": "^1.3.7",
    "@radix-ui/react-scroll-area": "^1.2.9",
    "@radix-ui/react-select": "^2.2.5",
    "@radix-ui/react-separator": "^1.1.7",
    "@radix-ui/react-slider": "^1.3.5",
    "@radix-ui/react-switch": "^1.2.5",
    "@radix-ui/react-tabs": "^1.1.12",
    "@radix-ui/react-toggle": "^1.1.9",
    "@radix-ui/react-toggle-group": "^1.1.10",
    "@radix-ui/react-tooltip": "^1.2.7",
    "@reduxjs/toolkit": "^2.2.5",
    "@types/react-tooltip": "^4.2.4",
    "@types/styled-components": "^5.1.34",
    "axios": "^1.7.3",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.0.0",
    "date-fns": "^4.1.0",
    "dexie": "^4.0.11",
    "firebase": "^11.9.1",
    "flowbite": "^2.4.1",
    "flowbite-react": "^0.10.1",
    "get-xpath": "^3.3.0",
    "jquery": "^3.7.1",
    "lucide-react": "^0.556.0",
    "next-themes": "^0.4.6",
    "nodemon": "^3.1.7",
    "papaparse": "^5.5.3",
    "react": "^18.2.0",
    "react-avatar": "^5.0.4",
    "react-dom": "^18.2.0",
    "react-icons": "^5.3.0",
    "react-redux": "^9.1.2",
    "react-resizable-panels": "^3.0.3",
    "react-router-dom": "^6.24.0",
    "react-select": "^5.10.1",
    "sonner": "^2.0.7",
    "string-similarity": "^4.0.4",
    "styled-components": "^6.1.11",
    "tailwind-merge": "^2.0.0",
    "tailwind.macro": "^0.5.10",
    "tailwindcss-animate": "^1.0.7",
    "vite-plugin-html": "^3.2.2",
    "vite-plugin-static-copy": "^2.1.0",
    "xlsx": "^0.18.5",
    "xpath": "^0.0.34"
  },
  "devDependencies": {
    "@crxjs/vite-plugin": "^2.0.0-beta.21",
    "@eslint/js": "^9.0.0",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/chrome": "^0.0.263",
    "@types/jquery": "^3.5.33",
    "@types/jsdom": "^27.0.0",
    "@types/papaparse": "^5.3.16",
    "@types/react": "^18.2.15",
    "@types/react-dom": "^18.2.7",
    "@types/string-similarity": "^4.0.2",
    "@types/webextension-polyfill": "^0.12.1",
    "@vitejs/plugin-react-swc": "^3.3.2",
    "@vitest/ui": "^4.0.14",
    "autoprefixer": "^10.4.20",
    "eslint": "^9.0.0",
    "eslint-plugin-import": "^2.29.0",
    "eslint-plugin-react": "^7.34.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "fake-indexeddb": "^6.2.5",
    "globals": "^15.0.0",
    "happy-dom": "^20.0.11",
    "jsdom": "^27.2.0",
    "madge": "^7.0.0",
    "@types/node": "^20.11.0",
    "postcss": "^8.5.3",
    "prettier": "^3.2.0",
    "rimraf": "^5.0.5",
    "npm-run-all": "^4.1.5",
    "husky": "^9.0.0",
    "lint-staged": "^15.2.0",
    "tailwindcss": "^3.4.17",
    "terser": "^5.28.0",
    "typescript": "^5.0.2",
    "typescript-eslint": "^7.0.0",
    "vite": "^6.3.5",
    "vitest": "^4.0.14",
    "@vitest/coverage-v8": "^1.3.0"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix --cache",
      "prettier --write"
    ],
    "*.{json,css,md}": [
      "prettier --write"
    ]
  },
  "browserslist": [
    "last 2 Chrome versions"
  ]
}
